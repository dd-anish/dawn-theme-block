<div class="paragraph-block">
  <div class="paragraph-text">{{ block.settings.paragraph_text }}</div>
</div>

{% schema %}
  {
    "name": "Paragraph",
    "settings": [
      {
        "type": "richtext",
        "id": "paragraph_text",
        "label": "Paragraph Text",
        "default": "<p>Your text here.</p>"
      },
      {
        "type": "select",
        "id": "font_size",
        "label": "Font Size",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      }
    ],
    "presets": [
      {
        "name": "Paragraph"
      }
    ]
  }

{% endschema %}